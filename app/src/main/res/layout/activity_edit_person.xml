<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePerson"
    android:background="#EEEE">


    <com.ultramegasoft.radarchart.RadarView
        android:id="@+id/radar"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radar">

        <EditText
            android:id="@+id/edittextime"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"

            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Prezime"
            android:background="#FFFF"/>

        <EditText
            android:id="@+id/edittextprezime"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittextime"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="75dp"
            android:background="#FFFF"
            android:hint="Ime"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText

            android:id="@+id/abilitys"
            android:layout_width="238dp"
            android:layout_height="189dp"


            android:layout_marginStart="16dp"


            android:layout_marginEnd="16dp"


            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/edittextprezime"
            android:background="#FFFF"
            android:gravity="top|start"
            android:hint="ability1=number1 \nability2 = number2"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minHeight="48dp"
            android:minLines="6" />
    </RelativeLayout>

    <Button
        android:id="@+id/uzmipodatkebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="198dp"
        android:layout_marginBottom="20dp"
        android:text="Unesi podatke">


    </Button>

    <Button
        android:id="@+id/obrisibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="20dp"
        android:text="Obrisi"></Button>
</RelativeLayout>